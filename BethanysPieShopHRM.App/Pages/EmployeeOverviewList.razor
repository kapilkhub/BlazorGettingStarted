@page "/employeeoverviewlist"

<h2>Employee Overview</h2>
@attribute [Authorize]
@if (Employees == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table table-light">
		<thead class="table-primary">
			<tr>
				<th></th>
				<th>Employee ID</th>
				<th>First name</th>
				<th>Last name</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Employees)
			{
				<EmployeeRow @key="employee" Employee="employee" />
			}

		</tbody>
	</table>
}